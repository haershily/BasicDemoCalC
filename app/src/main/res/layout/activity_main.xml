<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.harshil.basicdemocalc.MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Enter Number 1 "
        android:layout_marginTop="40sp"
        android:textSize="35sp"
        android:gravity="center_horizontal"
        android:id="@+id/tv1"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:inputType="numberDecimal"
        android:ems="5"
        android:id="@+id/et_vtwo"
        android:layout_below="@+id/tv2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Enter Number 2 "

        android:textSize="35sp"
        android:gravity="center_horizontal"
        android:id="@+id/tv2"
        android:layout_below="@+id/et_vone"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40sp" />

    <EditText
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="5"
        android:id="@+id/et_vone"
        android:layout_alignStart="@+id/et_vtwo"
        android:layout_below="@+id/tv1" />

    <LinearLayout
        android:id="@+id/container_buttons"
        android:layout_below="@id/et_vtwo"
        android:layout_marginTop="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ADD"
            android:text="ADD"
            android:layout_weight="2"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SUB"
            android:text="SUB"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/container_buttons2"
        android:layout_below="@id/container_buttons"
        android:layout_marginTop="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MUL"
            android:text="MUL"
            android:layout_weight="2"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DIV"
            android:text="DIV"
            android:layout_weight="2"/>
    </LinearLayout>
   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center_horizontal"
       android:layout_marginTop="30sp"
       android:layout_below="@id/container_buttons2"
       android:id="@+id/Result"
       android:textSize="35sp"
       android:text="RESULT"/>

</RelativeLayout>
